{
  "name": "ts-api-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "nodemon",
    "dev-server": "ts-node --files ./src/index.ts --transpile-only",
    "build": "tsc",
    "start": "node ./dist/index.js",
    "test": "jest",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "express": "^4.18.2",
    "nodemon": "^1.19.1",
    "typescript": "^3.5.2",
    "winston": "^3.2.1"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      ".env"
    ],
    "ext": "ts,json",
    "exec": "npm run dev-server"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.17",
    "@types/supertest": "^2.0.8",
    "jest": "^24.8.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0"
  }
}
